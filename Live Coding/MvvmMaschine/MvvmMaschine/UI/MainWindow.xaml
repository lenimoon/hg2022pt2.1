<Window
    x:Class="MvvmMaschine.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MvvmMaschine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="200"
    Height="200"
    mc:Ignorable="d"
    >
    <Canvas>
        <Button x:Name="btnStart"
            Canvas.Left="134"
            Canvas.Top="14"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Start" Click="btnStart_Click"
            />
        <Button x:Name="btnStopp"
            Canvas.Left="134"
            Canvas.Top="34"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Stopp" Click="btnStopp_Click"
            />

        <TextBox
            x:Name="txtSpeed"
            Canvas.Left="100"
            Canvas.Top="15"
            Width="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="{Binding Geschwindigkeit}"
            />
        <TextBlock
            x:Name="txtStueck"
            Canvas.Left="91"
            Canvas.Top="36"
            Width="34"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Text="{Binding Stueckzahl}"
            />
    </Canvas>
</Window>
